#include <stdio.h>
#include <stdbool.h>

char a_user_name[100];

int verify_user_name()
{
    char *user_name = &a_user_name;
    char *known_name = "dat_wil";

    puts("verifying username....\n");
    for (int i = 0; i < 7; i++)
    {
        if (user_name[i] != known_name[i])
        {
            return 1;
        }
    }
    return 0;
}

int verify_user_pass(char *pass)
{
    char *input_pass = pass;
    char *known_pass = "admin";

    for (int i = 0; i < 5; i++)
    {
        if (input_pass[i] != known_pass[i])
        {
            return 1;
        }
    }
    return 0;
}

int main()
{
    char buf[80];
    int check_username, check_password;

    puts("********* ADMIN LOGIN PROMPT *********");
    printf("Enter Username: ");
    scanf("%s", &a_user_name);
    if (verify_user_name() != 0)
    {
        puts("Incorrect username");
        check_username = 1;
    }
    else
    {
        puts("Enter Password: ");
        scanf("%s", &buf);
        check_password = verify_user_pass(&buf);
        if (check_password != 0)
        {
            puts("nope, incorrect password...");
            check_username = 1;
        }
        else
        {
            check_username = 0;
        }
    }
    return check_username;
}
